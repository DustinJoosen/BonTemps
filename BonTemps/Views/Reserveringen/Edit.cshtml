@model BonTemps.Models.Reservering

@{
    ViewData["Title"] = "Edit";
}

<h1>Wijzig</h1>

<h4>Reservering</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="KlantId" />
            <input type="hidden" asp-for="Tafel" />
            <dl>
                <dt class="col-sm-2">Klant</dt>
                <dd class="col-sm-10">@Model.Klant.Naam</dd>
                <dt class="col-sm-2">Tafel</dt>
                <dd class="col-sm-10">@Model.Tafel</dd>
            </dl>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" type="date" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tijd" class="control-label"></label>
                <input asp-for="Tijd" type="time" class="form-control" />
                <span asp-validation-for="Tijd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sla op" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar lijst</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
