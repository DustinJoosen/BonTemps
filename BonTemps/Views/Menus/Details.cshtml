@model BonTemps.Models.Menu

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Menu</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MenuSoort)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MenuSoort.Soort)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naam)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prijs)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prijs)
        </dd>
    </dl>
</div>
<h4>Gerechten</h4>
@await Component.InvokeAsync("MenuGerechten", new { Id = Model.Id }) 

<div>
    @if (User.IsInRole("Employee"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Wijzig</a> @("|")
    }
    <a asp-action="Index">Terug naar kaart</a>
</div>
